mixin table(data)
  table(class="mx-auto w-[80%]")
    thead
        tr
        th Title
        th Priority
        th Status
        th Assignee
        th Created
        th Due Date
    tbody
        each item in data
          tr
          td(class="text-center") 
            a(href=`/taskDetails?id=${item._id}`) #{item.title}
          td(class="text-center")= item.priority
          td(class="text-center")= item.status
          td(class="text-center")= item.assignee
          td(class="text-center")= item.created
          td(class="text-center")= item.deadline
