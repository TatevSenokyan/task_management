doctype html
html(lang="en")
  head
    meta(charser="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/styles/styles.css")
  body
    div(class="task w-full h-screen flex relative select-none")
      button(class="absolute right-2 bg-blue-500 text-[#fff] rounded-[10px] p-[10px] top-[10px]" onclick='handleOpenModal()') Create Task
      include ../components/taskModal
      include ../components/menu
      div(class="flex flex-col w-full h-full")
        include ../mixins/info
        include ../mixins/table
        +info(infoData)
        +table(tasks)
    script.
      const handleOpenModal = () => {
        document.querySelector(".modal").classList.remove("hidden");
        document.querySelector(".modal").classList.add("flex");
      }